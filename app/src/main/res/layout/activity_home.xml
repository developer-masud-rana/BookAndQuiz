<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebackgorundshap"
    tools:context=".HomeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/welcomelayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/welcometextlayout"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/txt_welcome"
            android:textColor="#FBFCFB"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/usernametext"
            android:layout_below="@+id/welcometextlayout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="50dp"
                android:id="@+id/circle"
                android:layout_marginLeft="15dp"
                android:layout_height="50dp"
                android:src="@drawable/logincircleimage"
                app:civ_border_color="#3f51b5"
                app:civ_border_width="1dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="1dp"
                app:civ_shadow_color="#3f51b5"/>

            <TextView
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/txt_username"
                android:textColor="#4B584B"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20sp"
        android:orientation="vertical"
        android:layout_below="@+id/welcomelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#9FB2DA"
                android:id="@+id/crd_allstudent"
                android:layout_width="150dp"
                android:layout_height="100dp"
                >
                <LinearLayout
                    android:background="@drawable/backgorundshap"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="50dp"
                        android:id="@+id/circlecar"
                        android:layout_height="50dp"
                        android:src="@drawable/logincircleimage"
                        app:civ_border_color="#3f51b5"
                        app:civ_border_width="1dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="1dp"
                        app:civ_shadow_color="#3f51b5"/>


                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:padding="10dp"
                            android:textSize="20dp"
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All Student"
                            />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="20sp"
                app:cardBackgroundColor="#9FB2DA"
                android:id="@+id/crd_qanda"
                android:layout_width="150dp"
                android:layout_height="100dp"
                >
                <LinearLayout
                    android:background="@drawable/backgorundshap"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="50dp"
                        android:id="@+id/circlecardd"
                        android:layout_height="50dp"
                        android:src="@drawable/logincircleimage"
                        app:civ_border_color="#3f51b5"
                        app:civ_border_width="1dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="1dp"
                        app:civ_shadow_color="#3f51b5"/>


                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:padding="10dp"
                            android:textSize="20dp"
                            android:id="@+id/txt_subna"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quiz"
                            />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#9FB2DA"
                android:id="@+id/crd_stat"
                android:layout_width="150dp"
                android:layout_height="100dp"
                >
                <LinearLayout
                    android:background="@drawable/backgorundshap"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="50dp"
                        android:id="@+id/circlecard"
                        android:layout_height="50dp"
                        android:src="@drawable/logincircleimage"
                        app:civ_border_color="#3f51b5"
                        app:civ_border_width="1dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="1dp"
                        app:civ_shadow_color="#3f51b5"/>


                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:padding="10dp"
                            android:textSize="20dp"
                            android:id="@+id/textViewName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Statistic"
                            />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="20sp"
                app:cardBackgroundColor="#9FB2DA"
                android:id="@+id/crd_quiz"
                android:layout_width="150dp"
                android:layout_height="100dp"
                >
                <LinearLayout
                    android:background="@drawable/backgorundshap"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="50dp"
                        android:id="@+id/circlecardda"
                        android:layout_height="50dp"
                        android:src="@drawable/logincircleimage"
                        app:civ_border_color="#3f51b5"
                        app:civ_border_width="1dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="1dp"
                        app:civ_shadow_color="#3f51b5"/>


                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:padding="10dp"
                            android:textSize="20dp"
                            android:id="@+id/txt_subname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Q/A"
                            />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>


    </LinearLayout>



</RelativeLayout>